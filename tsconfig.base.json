{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"composite": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"isolatedDeclarations": true,
		"verbatimModuleSyntax": true,
		"rewriteRelativeImportExtensions": true
	},
	"exclude": ["**/*.test.ts"]
}
