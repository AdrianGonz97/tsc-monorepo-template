{
	"name": "root",
	"version": "0.0.0",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"dev": "tsc --build --force --watch --verbose",
		"clean": "tsc --build --clean",
		"build": "tsc --build --noCheck --force --verbose",
