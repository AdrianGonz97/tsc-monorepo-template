		"test": "vitest run"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"prettier": "^3.3.3",
		"typescript": "^5.7.2",
		"vitest": "^2.1.5"
	},
	"packageManager": "pnpm@9.14.2"
}
